<div class="text-center">
  <h1><%= @user.name %></h1>

  <p class="buffer-top">
    <%= image_tag user_avatar(@user) %>
  </p>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to t('views.users.show.edit'), edit_user_path(@user), class: 'btn btn-primary' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('views.users.show.event') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('views.users.show.status') %></p>
      <% end %>
    </div>
  </div>

</div>
